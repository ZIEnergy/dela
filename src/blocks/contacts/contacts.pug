mixin contacts(additionalClass)
  .contacts(class=additionalClass)
    h2.content-header Подтверждённые контакты
    ul.contacts__list
      .contacts__item
        .contacts__item-header
          .contacts__icon.contacts__icon--phone
          .contacts__item-title Телефон:
        p.contacts__item-content +7 (XXX) XXX-XX-XX
      .contacts__item
        .contacts__item-header
          .contacts__icon.contacts__icon--mail
          .contacts__item-title Почта:
        p.contacts__item-content XXXXXXXXX@gmail.com
      .contacts__item
        .contacts__item-header
          .contacts__icon.contacts__icon--vk
          .contacts__item-title Vkontakte:
        p.contacts__item-content 125 друга
      .contacts__item
        .contacts__item-header
          .contacts__icon.contacts__icon--fb
          .contacts__item-title Facebook:
        p.contacts__item-content нет друзей
      .contacts__item
        .contacts__item-header
          .contacts__icon.contacts__icon--twitter
          .contacts__item-title Twitter:
        p.contacts__item-content 51 читатель
    